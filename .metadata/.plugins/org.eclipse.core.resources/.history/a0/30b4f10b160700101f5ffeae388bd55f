	<script>
        function previewImage(event) {
            const previewImg = document.getElementById('previewImg');
            previewImg.src = URL.createObjectURL(event.target.files[0]);
            previewImg.classList.remove('d-none');
        }

        document.addEventListener("DOMContentLoaded", function () {
            fetchMenuList(); // âœ… å–å¾—ä¸‹æ‹‰é¸å–®å•†å“åˆ—è¡¨
            fetchSelectedMenu(); // âœ… å–å¾—é¸ä¸­å•†å“çš„è©³ç´°è³‡è¨Š
        });

        function fetchMenuList() {
            fetch('/project/GetMenuItems')
            .then(response => response.json())
            .then(data => {
                let select = document.getElementById("menu_name");
                select.innerHTML = '<option value="">è«‹é¸æ“‡å•†å“</option>';
                data.forEach(menu => {
                    let option = document.createElement("option");
                    option.value = menu.menu_name;
                    option.textContent = menu.menu_name;
                    select.appendChild(option);
                });
            })
            .catch(error => console.error("âŒ è¼‰å…¥å•†å“é¸å–®å¤±æ•—:", error));
        }

        function fetchSelectedMenu() {
            let params = new URLSearchParams(window.location.search);
            let menuName = decodeURIComponent(params.get("menu_name") || "").trim();
            
            if (!menuName) {
                console.warn("âš ï¸ `menu_name` åƒæ•¸ç‚ºç©ºï¼Œå–æ¶ˆ API è«‹æ±‚");
                return;
            }
            
            console.log("Fetching:", `/project/GetMenuItems?menu_name=${encodeURIComponent(menuName)}&t=${Date.now()}`);
			console.log("item=" + menuName);
            //console.log("Fetching:", `/HomeWork2/GetMenuItems?menu_name=${encodeURIComponent(menuName)}`);
            //fetch(`/HomeWork2/GetMenuItems?menu_name=${encodeURIComponent(menuName)}`)
            fetch(`/project/GetMenuItems?menu_name=${encodeURIComponent(menuName)}&t=${Date.now()}`)

            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    console.error("âŒ ç„¡æ³•è¼‰å…¥è³‡æ–™ï¼š" + data.error);
                    return;
                }

                document.getElementById("menu_name").value = data.menu_name;
                document.getElementById("stock").value = data.stock ?? 0;
                document.getElementById("unit_price").value = data.unit_price ?? 0;
                document.getElementById("description").value = data.description;
                document.getElementById("status").value = data.status;
                document.getElementById("category").value = data.category;

                // âœ… å¡«å…¥ menu_id åˆ° hidden æ¬„ä½
                document.getElementById("menu_id").value = data.menu_id;

                // âœ… é¡¯ç¤ºåœ–ç‰‡
                let currentImage = document.getElementById("currentImage");
                if (data.image_url) {
                    let decodedUrl = decodeURIComponent(data.image_url);
                    currentImage.src = decodedUrl;
                    currentImage.classList.remove("d-none");
                } else {
                    currentImage.classList.add("d-none");
                }
</script>

